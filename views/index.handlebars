<ul class="left">
  {{#each burger}}
    {{#unless devoured}}
      <p>{{this.burger_name}}</p>
      <button class="devour" data-id="{{this.id}}">
		Devour
	</button>
    {{/unless}}
  {{/each}}
</ul>

<ul class="right">
  {{#each burger}}
    {{#if devoured}}
      <p>{{this.burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>



<h2>Add a Burger</h2>

<form action="/" method="POST">
	<textarea type="text" name="burger"></textarea>

	<button type="submit">Submit</button>
</form>
